{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 3
  },
  "include": [
  ],
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default ",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "environment": {
        "VCPKG_ROOT" : "${sourceDir}/vcpkg"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
           "type": "FILEPATH"
        },
        "VCPKG_TRACE_FIND_PACKAGE" : true
      },
      "hidden": true
    },
    {
      "name": "windows-VS-default",
      "displayName": "Windows default VS",
      "inherits": "default",
      "generator": "Visual Studio 17 2022",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-VS-x64",
      "displayName": "Windows X64 VS",
      "inherits": "windows-VS-default",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "hidden": true
    },
    {
      "name": "windows-VS-debug-x64",
      "displayName": "Windows debug x64 VS",
      "inherits": "windows-VS-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "value": "DEBUG"
        }
      },
      "hidden": false
    },
    {
      "name": "windows-VS-release-x64",
      "displayName": "Windows release x64 VS",
      "inherits": "windows-VS-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "value": "RELEASE"
        }
      },
      "hidden": false
    },
    {
      "name": "windows-Ninja-default",
      "displayName": "Windows default  ninja",
      "inherits": "default",
      "generator": "Ninja",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_HOST_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-Ninja-x64",
      "displayName": "Windows X64 ninja",
      "inherits": "windows-Ninja-default",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "hidden": true
    },
    {
      "name": "windows-Ninja-debug-x64",
      "displayName": "Windows debug x64 ninja",
      "inherits": "windows-Ninja-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "value": "DEBUG"
        }
      },
      "hidden": false
    },
    {
      "name": "windows-Ninja-release-x64",
      "displayName": "Windows release x64 ninja",
      "inherits": "windows-Ninja-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "value": "RELEASE"
        }
      },
      "hidden": false
    }
  ],
  "buildPresets": [
    {
      "name": "trading-platform-VS-win-x64-debug",
      "displayName": "trading platform windows VS x64 debug build",
      "configurePreset": "windows-VS-debug-x64",
      "targets" : ["TradingPlatform"],
      "verbose": true
    },
    {
      "name": "trading-platform-VS-win-x64-releaes",
      "displayName": "trading platform windows VS x64 release build",
      "configurePreset": "windows-VS-release-x64",
      "targets" : ["TradingPlatform"],
      "verbose": true
    },
    {
      "name": "trading-platform-Ninja-win-x64-debug",
      "displayName": "trading platform windows Ninja x64 debug build",
      "configurePreset": "windows-Ninja-debug-x64",
      "targets" : ["TradingPlatform"],
      "verbose": true
    },
    {
      "name": "trading-platform-Ninja-win-x64-releaes",
      "displayName": "trading platform windows Ninja x64 release build",
      "configurePreset": "windows-Ninja-release-x64",
      "targets" : ["TradingPlatform"],
      "verbose": true
    }
  ]
}